@model COMP2138_ICE.Models.Event

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded mb-4 w-100" style="max-height: 400px; object-fit: cover;" />
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded mb-4" style="height: 300px;">
                    <h3>No Image Available</h3>
                </div>
            }
            
            <h1>@Model.Title</h1>
            <p class="text-muted">
                <i class="bi bi-calendar-event"></i> @Model.DateTime.ToString("f") | 
                <i class="bi bi-tag"></i> @Model.Category?.Name
            </p>
            
            <div class="mt-4">
                <h4>About this Event</h4>
                <p>@Html.Raw(Model.Description)</p>
                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-muted">No description provided.</p>
                }
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-success">@Model.Price.ToString("C")</h3>
                    <p class="card-text">
                        <strong>Organizer:</strong> @(Model.Organizer?.DisplayName ?? "Unknown")<br />
                        <strong>Availability:</strong> 
                        @if (Model.DateTime < DateTime.Now)
                        {
                            <span class="badge bg-danger">Expired</span>
                        }
                        else if (Model.TicketsAvailable > 10)
                        {
                            <span class="text-success">In Stock (@Model.TicketsAvailable)</span>
                        }
                        else if (Model.TicketsAvailable > 0)
                        {
                            <span class="text-warning">Low Stock! Only @Model.TicketsAvailable left</span>
                        }
                        else
                        {
                            <span class="text-danger">Sold Out</span>
                        }
                    </p>
                    
                    @if (!User.IsInRole("Admin"))
                    {
                        <form id="addToCartForm" class="mt-3">
                            <input type="hidden" name="eventId" value="@Model.Id" />
                            @if (Model.DateTime >= DateTime.Now)
                            {
                                <div class="mb-3">
                                    <label for="ticketQuantity" class="form-label fw-bold">Quantity</label>
                                    <div class="input-group mb-2" style="max-width: 200px;">
                                        <button class="btn btn-outline-secondary" type="button" id="btn-minus" @(Model.TicketsAvailable == 0 ? "disabled" : "")><i class="bi bi-dash"></i></button>
                                        <input type="number" class="form-control text-center" id="ticketQuantity" name="quantity" value="1" min="1" max="@Model.TicketsAvailable" data-price="@Model.Price" data-stock="@Model.TicketsAvailable" @(Model.TicketsAvailable == 0 ? "disabled" : "")>
                                        <button class="btn btn-outline-secondary" type="button" id="btn-plus" @(Model.TicketsAvailable == 0 ? "disabled" : "")><i class="bi bi-plus"></i></button>
                                    </div>
                                    <!-- Quick Select Badges -->
                                    <div class="mb-3">
                                        <small class="text-muted me-2">Quick Select:</small>
                                        @for (int i = 2; i <= 10; i += 2)
                                        {
                                            if (i <= Model.TicketsAvailable)
                                            {
                                                <span class="badge bg-light text-dark border me-1 quick-qty" style="cursor:pointer;" data-qty="@i">@i</span>
                                            }
                                        }
                                    </div>
                                    <div id="stockWarning" class="form-text text-danger" style="display:none;"></div>
                                </div>
                                <div class="mb-3 d-flex justify-content-between align-items-center">
                                    <strong>Total:</strong>
                                    <span id="totalPrice" class="h4 text-primary mb-0">@Model.Price.ToString("C")</span>
                                </div>
                            }
                            <button type="button" class="btn btn-primary w-100 btn-add-to-cart" @(Model.DateTime < DateTime.Now || Model.TicketsAvailable == 0 ? "disabled" : "")>
                                @(Model.DateTime < DateTime.Now ? "Event Expired" : "Add to Cart")
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle"></i> Administrators cannot purchase tickets.
                        </div>
                    }
                </div>
            </div>
            
            @if (User.IsInRole("Admin") || (User.Identity.IsAuthenticated && Model.OrganizerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">Edit Event</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">Delete Event</a>
                </div>
            }
            
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Purchase Confirmation Modal -->
<div class="modal fade" id="purchaseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-check-circle-fill"></i> Added to Cart!</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="lead">Your tickets have been added to the cart.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Continue Shopping</button>
                <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Checkout</a>
            </div>
        </div>
    </div>
</div>
